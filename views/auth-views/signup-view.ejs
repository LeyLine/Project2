<h2> Sign Up </h2>

<p> Sign up </p>

<!-- We use typeof here to avoid an error
     since the variable sometimes doesn't exist. -->
<% if (typeof messageForDumbUsers === 'string') { %>
  <p class="error-message">
    <%= messageForDumbUsers %>
  </p>
  <% } %>

    <form id="form" method="post" action="/signup">
      <label for="full-name-input"> Your Name </label>
      <input id="full-name-input" type="text" name="signupFullName" placeholder="Name">
      <br>

      <label for="username-input"> Username </label>
      <input id="username-input" type="text" name="signupUsername" placeholder="User_Name">
      <br>

      <label for="password-input"> Password </label>
      <input id="password-input" type="password" name="signupPassword" placeholder="Password">
      <br>

      <button> Sign Up </button>
    </form>

  
